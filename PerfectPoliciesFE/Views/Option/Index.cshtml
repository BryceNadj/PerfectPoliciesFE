            <th>
                @Html.DisplayNameFor(model => model.OptionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCorrect)
            </th>
            @*
        <th>
            @Html.DisplayNameFor(model => model.QuestionId)
        </th>
            *@
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*
        <td>
            @Html.DisplayFor(modelItem => item.OptionId)
        </td>
            *@
            <td>
                @Html.DisplayFor(modelItem => item.OptionText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCorrect)
            </td>
            @*
        <td>
            @Html.DisplayFor(modelItem => item.QuestionId)
        </td>
            *@
