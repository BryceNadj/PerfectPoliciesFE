@model IEnumerable<PerfectPoliciesFE.Models.OptionModels.Option>

@{
    ViewData["Title"] = "Index";

    var questionId = Context.Request.RouteValues.Where(c => c.Key == "id").FirstOrDefault().Value;

    var quizId = ViewBag.quizId;
}

<h1>Index</h1>

<p>
    @{
        if (questionId != null)
        {
            @Html.ActionLink("Create New", "CreateForQuestion", "Option", new { id = questionId })
        }
        else
        {
            <a asp-action="Create">Create New</a>
        }
    }
</p>
<table class="table">
    <thead>
        <tr>
            @*
        <th>
            @Html.DisplayNameFor(model => model.OptionId)
        </th>
